COMMAND="lun.sh"
RESTAURANTS_FILE="$HOME/.lunch/restaurants.bash"

_lunch()
{
    if [ ! -e $RESTAURANTS_FILE ]
    then
        return 1
    fi

    local cur restaurants

    cur="${COMP_WORDS[COMP_CWORD]}"

    COMPREPLY=( $(compgen -W "$(cat $RESTAURANTS_FILE)" -- "$cur") )
}

complete -F _lunch $COMMAND
